<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicFun" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/light_green_A400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="player_area_background">@drawable/player_area_background</item>
        <item name="bottom_navigationbar_backgroung">@drawable/bottom_navigationbar_background_night</item>
        <item name="welcome">@raw/welcome</item>
        <item name="musicplay">@raw/musicplay</item>
        <item name="item_text_color">@color/item_text_color_night</item>
    </style>
</resources>